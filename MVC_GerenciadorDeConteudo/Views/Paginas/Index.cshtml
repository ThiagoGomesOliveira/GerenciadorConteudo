@{
    ViewBag.Title = "Páginas";
    List<Business.Pagina> paginas = ViewBag.Paginas;
}

<div class="jumbotron">
    <h3>Páginas</h3>

    <div> <a href="/Paginas/Novo" class="btn btn-primary">Novo</a> </div>
    <table class="table">
        <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>Data</th>
            <th></th>
        </tr>
        @{ foreach (var item in paginas)
            {

                <tr>
                    <td>@item.Id</td>
                    <td>@item.Nome</td>
                    <td>@item.Data</td>
                    <td> <a href="/paginas/@item.Id/Editar" class="btn btn-primary">Editar</a> </td>
                </tr>
            }}

    </table>

</div>

